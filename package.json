{
  "name": "hello-rel",
	"displayName": "Hello Rel",
	"description": "Tools for authoring self-paced lessons for the Hello Rel platform",
	"publisher": "sswatson",
	"icon": "assets/hello-rel.png",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/sswatson/hello-rel-vscode.git"
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:hello-rel.newGlossary"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hello-rel.newGlossary",
				"title": "New Glossary Entry"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	}
}
